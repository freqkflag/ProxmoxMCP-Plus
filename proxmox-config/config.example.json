{
    "proxmox": {
        "host": "your-proxmox-host-ip",
        "port": 8006,
        "verify_ssl": true,
        "service": "PVE"
    },
    "auth": {
        "user": "automation@pve",
        "token_name": "your-token-name",
        "token_env_var": "PROXMOX_TOKEN_VALUE"
    },
    "logging": {
        "level": "DEBUG",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "proxmox_mcp.log"
    }
}
